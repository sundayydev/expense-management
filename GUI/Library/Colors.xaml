<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--1.Background colors-->
    
    <!--Solid colors-->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#9BB8CD" />
    <SolidColorBrush x:Key="BackgroundGreen" Color="#88C273" />
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#b7c1d1" />
    <SolidColorBrush x:Key="BackgroundSuccess" Color="#04a08b" />
    <SolidColorBrush x:Key="BackgroundInfo" Color="#00baff" />
    <SolidColorBrush x:Key="BackgroundWarning" Color="#ff9920" />
    <SolidColorBrush x:Key="BackgroundDanger" Color="#ff562f"/>
    <SolidColorBrush x:Key="BackgroundDark" Color="#172b4c"/>
    <SolidColorBrush x:Key="BackgroundGray" Color="#758694" />
    <SolidColorBrush x:Key="BackgroundBuleSky" Color="#80C4E9" />
    <SolidColorBrush x:Key="BackgroundRed" Color="#FF8080" />
    

    <!--Light colors-->
    <SolidColorBrush x:Key="BackgroundPrimaryLight" Color="#e1eaf9"/>
    <SolidColorBrush x:Key="BackgroundSecondaryLight" Color="#e9edf2"/>
    <SolidColorBrush x:Key="BackgroundSuccessLight" Color="#d1f5f0"/>
    <SolidColorBrush x:Key="BackgroundInfoLight" Color="#d1f3ff"/>
    <SolidColorBrush x:Key="BackgroundWarningLight" Color="#fff2e2"/>
    <SolidColorBrush x:Key="BackgroundDangerLight" Color="#ffeae5"/>

    <!--Other colors-->
    <SolidColorBrush x:Key="BackgroundWhite" Color="#ffffff"/> 
    <SolidColorBrush x:Key="BackgroundTransparent" Color="Transparent"/>
    <SolidColorBrush x:Key="BackgroundLight" Color="#e4e6ef" />
    <SolidColorBrush x:Key="BackgroundLighter" Color="#FBFBFB"/>
    <SolidColorBrush x:Key="BackgroundRed" Color="#FF4545"/>
    <SolidColorBrush x:Key="BackgroundBule" Color="#133E87"/>
    <SolidColorBrush x:Key="BackgroundGree" Color="#219B9D"/>
    <SolidColorBrush x:Key="BackgroundLightest" Color="#f3f6f9"/>

    <!--2. Gradient colors--> 
    <LinearGradientBrush x:Key="BgGradientPrimary" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF0052CC" Offset="0.0" />
        <GradientStop Color="#FF00BAFF" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BgGradientSecondary" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#b7c1d1" Offset="0.0" />
        <GradientStop Color="#00baff" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BgGradientInfo" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00baff" Offset="0.0" />
        <GradientStop Color="#0052cc" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BgGradientSuccess" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#04a08b" Offset="0.0" />
        <GradientStop Color="#00baff" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BgGradientDanger" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#ff562f" Offset="0.0" />
        <GradientStop Color="#00baff" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BgGradientWarning" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#ff9920" Offset="0.0" />
        <GradientStop Color="#00baff" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BgGradientMistyPurple" StartPoint="0, 0" EndPoint="1, 1">
        <GradientStop Color="#FDABDD" Offset="0.0" />
        <GradientStop Color="#374A5A" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BgGradientGreen" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1D976C" Offset="0.0" />
        <GradientStop Color="#93F9B9" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BgGradientBlueCus" StartPoint="0.1,0.2" EndPoint="1,1">
        <GradientStop Color="#61BAFF" Offset="0.0" />
        <GradientStop Color="#A6EFFD" Offset="0.901" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BgGradientCyanPurple" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#90c1fc" Offset="0.3" />
        <GradientStop Color="#f1dee4" Offset="0.7" />
    </LinearGradientBrush>
    

    <!--3. Border colors-->
    <SolidColorBrush x:Key="BorderPrimary" Color="#0052cc" />
    <SolidColorBrush x:Key="BorderSecondary" Color="#b7c1d1" />
    <SolidColorBrush x:Key="BorderSuccess" Color="#04a08b" />
    <SolidColorBrush x:Key="BorderInfo" Color="#00baff" />
    <SolidColorBrush x:Key="BorderWarning" Color="#ff9920" />
    <SolidColorBrush x:Key="BorderDanger" Color="#ff562f"/>
    <SolidColorBrush x:Key="BorderDark" Color="#172b4c"/>

    <!--4. Text colors-->
    <SolidColorBrush x:Key="TextPrimary" Color="#0052cc" />
    <SolidColorBrush x:Key="TextSecondary" Color="#4d7bc9" />
    <SolidColorBrush x:Key="TextSuccess" Color="#04a08b" />
    <SolidColorBrush x:Key="TextInfo" Color="#00baff" />
    <SolidColorBrush x:Key="TextWarning" Color="#ff9920" />
    <SolidColorBrush x:Key="TextDanger" Color="#ff562f"/>
    <SolidColorBrush x:Key="TextDark" Color="#172b4c"/>
    <SolidColorBrush x:Key="TextWhiteMilk" Color="#FDF7F4"/>
    <SolidColorBrush x:Key="TextBuleBold" Color="#0A5EB0"/>
    <SolidColorBrush x:Key="TextBuleBoldMax" Color="#131842"/>
</ResourceDictionary>