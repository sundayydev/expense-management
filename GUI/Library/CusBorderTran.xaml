<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
  
        <!--style radiobutton-->
    <Style x:Key="DayRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="BorderBrush" Value="LightBlue" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Style.Triggers>
            <!-- Trigger khi Hover vào -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="gray" />
                <Setter Property="Foreground" Value="#ffff" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="FullRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="BorderBrush" Value="#FF8A8A" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Style.Triggers>
            <!-- Trigger khi Hover vào -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="gray" />
                <Setter Property="Foreground" Value="#ffff" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    
    <!-- Style cho RadioButton Tháng -->
    <Style x:Key="MonthRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Honeydew" />
        <Setter Property="BorderBrush" Value="LightGreen" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Style.Triggers>
            <!-- Trigger khi Hover vào -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="GreenYellow" />
                <Setter Property="Foreground" Value="#ffff" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BorderStyleDay" TargetType="Border">
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="BorderBrush" Value="LightBlue" />
        <Style.Triggers>
            <!-- Trigger khi Hover vào -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BackgroundPrimary}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="BorderStyleMonth" TargetType="Border">
        <Setter Property="Background" Value="Honeydew" />
        <Setter Property="BorderBrush" Value="LightGreen" />
        <Style.Triggers>
            <!-- Trigger khi Hover vào -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BackgroundGreen}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="BorderStyleFull" TargetType="Border">
        <Setter Property="Background" Value="#F5DAD2" />
        <Setter Property="BorderBrush" Value="#FF8A8A" />
        <Style.Triggers>
            <!-- Trigger khi Hover vào -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF8A8A" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
