<UserControl x:Class="GUI.UserControls.UcHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GUI.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200"
             Background="White">
    <Grid>
        

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="350" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        
            <Grid >
                
                <Label Content="View All " FontSize="16" 
                   FontWeight="SemiBold" HorizontalAlignment="Right"  
                   VerticalAlignment="Center" Margin="30,0,10,0"></Label>
                <Label Content="Bạn chưa có tài khoản ? " FontSize="16" 
                   FontWeight="SemiBold" HorizontalAlignment="Left"  
                   VerticalAlignment="Center" Margin="30,0,0,0"></Label>
            </Grid>
        

        

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                   
                </Grid.ColumnDefinitions>
                <StackPanel >
                    <Border Background="{StaticResource BackgroundBuleSky}" Width="250" Height="120" HorizontalAlignment="Center" CornerRadius="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="*" />

                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="../Resource/mail2.png" Width="50" Height="50" 
                                   HorizontalAlignment="Right" Margin="0,0,0,40"/>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Height="120" Width="auto">
                                <TextBlock Text="Thông Báo" FontSize="18" FontWeight="Bold" Foreground="{StaticResource BackgroundLight}"
                                       HorizontalAlignment="Left" Margin="0,10,0,0" />
                                <TextBlock Text="2222222VND" FontSize="24" Margin="0,10,0,0" FontWeight="Bold" Foreground="{StaticResource BackgroundLight}"
                                       HorizontalAlignment="Left" />
                                <TextBlock Text="All Rights Reserved." FontSize="12" Margin="0,15,30,0" Foreground="{StaticResource BackgroundLight}"
                                       HorizontalAlignment="Left"  />
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1"  >
                    <Border Background="{StaticResource BackgroundBuleSky}" Width="250" Height="120" HorizontalAlignment="Center" CornerRadius="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="*" />

                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="../Resource/wallet.png" Width="50" Height="50" 
                   HorizontalAlignment="Right" Margin="0,0,0,40"/>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Height="120" Width="auto">
                                <TextBlock Text="Khoản trả" FontSize="18" FontWeight="Bold" Foreground="{StaticResource BackgroundLight}"
                       HorizontalAlignment="Left" Margin="0,10,0,0" />
                                <TextBlock Text="2222222VND" FontSize="24" Margin="0,10,0,0" FontWeight="Bold" Foreground="{StaticResource BackgroundLight}"
                       HorizontalAlignment="Left" />
                                <TextBlock Text="All Rights Reserved." FontSize="12" Margin="0,15,30,0" Foreground="{StaticResource BackgroundLight}"
                       HorizontalAlignment="Left"  />
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Border Background="{StaticResource BackgroundBuleSky}" Width="250" Height="120" HorizontalAlignment="Center" CornerRadius="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="*" />

                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="../Resource/salary.png" Width="50" Height="50" 
                   HorizontalAlignment="Right" Margin="0,0,0,40"/>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Height="120" Width="auto">
                                <TextBlock Text="Thu Nhập" FontSize="18" FontWeight="Bold" Foreground="{StaticResource BackgroundLight}"
                       HorizontalAlignment="Left" Margin="0,10,0,0" />
                                <TextBlock Text="2222222VND" FontSize="24" Margin="0,10,0,0" FontWeight="Bold" Foreground="{StaticResource BackgroundLight}"
                       HorizontalAlignment="Left" />
                                <TextBlock Text="All Rights Reserved." FontSize="12" Margin="0,15,30,0" Foreground="{StaticResource BackgroundLight}"
                       HorizontalAlignment="Left"  />
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

                
            </Grid>
            <Grid Grid.Row="2">
                <Label Content="View All " FontSize="16" 
                    FontWeight="SemiBold" HorizontalAlignment="Right"  
                    VerticalAlignment="Center" Margin="30,0,10,0"></Label>
                <Label Content="Bạn chưa có tài khoản ? " FontSize="16" 
                    FontWeight="SemiBold" HorizontalAlignment="Left"  
                    VerticalAlignment="Center" Margin="30,0,0,0"></Label>
            </Grid>
        
        </Grid>

        
            
      

    
    
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
               
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
                    <Label Content="View All " FontSize="16" 
                       FontWeight="SemiBold" HorizontalAlignment="Right"  
                       VerticalAlignment="Center" Margin="0,0,5,0"></Label>
                    <Label Content="Bạn chưa có tài khoản ? " FontSize="16" 
               FontWeight="SemiBold" HorizontalAlignment="Left"  
               VerticalAlignment="Center" Margin="10,0,0,0"></Label>
        
             <Calendar Grid.Column="1" HorizontalAlignment="Center" Background="#FFFF" Margin="5,0,0,0" Grid.Row="1" VerticalAlignment="Top"  Height="302" Width="330" />
        </Grid>












    </Grid>

</UserControl>
