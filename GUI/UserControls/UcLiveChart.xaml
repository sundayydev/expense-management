<UserControl x:Class="GUI.UserControls.UcLiveChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.UserControls"
             xmlns:lc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!-- Define Gradient Brushes for Custom Colors -->
        <LinearGradientBrush x:Key="IncomeGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#789DBC" Offset="0" />
            <GradientStop Color="#A6AEBF" Offset="1" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="ExpenseGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#EF9C66" Offset="0" />
            <GradientStop Color="#FFB38E" Offset="1" />
        </LinearGradientBrush>
    </UserControl.Resources>

    <Grid Height="300">
        <lc:CartesianChart Series="{Binding SeriesCollection}">
            <lc:CartesianChart.AxisX>
                <lc:Axis Labels="{Binding Labels}" LabelsRotation="0">
                    <lc:Axis.Separator>
                        <!-- Set Step to 1 to ensure all labels appear -->
                        <lc:Separator Step="1" />
                    </lc:Axis.Separator>
                </lc:Axis>
            </lc:CartesianChart.AxisX>
            <lc:CartesianChart.AxisY>
                <lc:Axis LabelFormatter="{Binding Values}" />
            </lc:CartesianChart.AxisY>
        </lc:CartesianChart>
    </Grid>
</UserControl>
